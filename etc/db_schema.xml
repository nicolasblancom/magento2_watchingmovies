<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table
            name="nicolasblancom_watchingmovies_movie"
            resource="default"
            comment="Watching movies list"
    >
        <column xsi:type="int"
                name="movie_id"
                identity="true"
                comment="Movie ID"
        />
        <column xsi:type="varchar"
                name="label"
                length="255"
                nullable="false"
                comment="Movie Label"
        />
        <column xsi:type="varchar"
                name="status"
                nullable="false"
                length="255"
                default="open"
                comment="Status"
        />
        <column xsi:type="int"
                name="customer_id"
                padding="10"
                unsigned="true"
                nullable="true"
                identity="false"
                comment="Customer ID"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="movie_id" />
        </constraint>

        <constraint xsi:type="foreign"
                    referenceId="NICOLASBLANCOM_WATCHINGMOVIES_MOVIE_CSTR_ID_CSTR_ENTT_ENTT_ID"
                    table="nicolasblancom_watchingmovies_movie"
                    column="customer_id"
                    referenceTable="customer_entity"
                    referenceColumn="entity_id"
                    onDelete="CASCADE"
        />
    </table>
</schema>